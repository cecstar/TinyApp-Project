
<% if (username == null) { %>
  <form action="/login" method="POST" >
    <input type="text" name="username" value="<%= username %>">
    <input type="submit" value="Sign In">
  </form>
<% } else { %>
  <form action="/logout" method="POST" >
    <h3> <%= username %> </h3>
    <input type="submit" value="Logout">
  </form>
<% }; %>

